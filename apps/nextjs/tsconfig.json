{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@trpcclient/*": ["./src/utils/*"],
      "@lib/*": ["./src/lib/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@sections/*": ["./src/components/sections/*"],
      "@modals/*": ["./src/components/modals/*"],
      "@auth/*": ["./src/pages/api/auth/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "next-i18next.config.mjs"
  ]
}
